{
    "name": "lucys-player",
    "version": "0.1.6",
    "main": "main.js",
    "author": "LucyUwI",
    "description": "A Spotify controller I made with node.js and Electron",
    "productName": "Lucy's Player",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "dependencies": {
        "body-parser": "^1.20.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "electron-settings": "^4.0.2",
        "electron-store": "^8.1.0",
        "express": "^4.18.1",
        "fs": "^0.0.1-security",
        "request": "^2.88.2",
        "spotify-web-api-node": "^5.0.2"
    },
    "build": {
        "appId": "lucys-spotify-controler",
        "mac": {
            "category": "music"
        },
        "linux": {
            "icon": "build/icon.png",
            "target": [
                "deb",
                "snap",
                "appimage"
            ]
        }
    }
}